@using  JayZeeTool.Models;
@model JayZeeTool.Models.PostModel
@{
    ViewBag.Title = "Index";
}
<div style="width:80%;margin-left:50px;margin-top:30px">
    <div class="title"><h2>接口调试工具</h2></div>

    @using (Html.BeginForm("Index", "APIDebug", FormMethod.Post))
    {
        <div class="panel panel-primary" style="width:80%;margin-left:30px">
            <div class="panel-heading">
                URL：
                <div class="input-group input-group-lg" style="width: 100%;">
                    @Html.TextBoxFor(m => m.requestURL, new { @class = "form-control", @style = "width:100%" })
                </div>
            </div>

            <div class="panel-body" style="height:400px;margin-bottom:20px">
                PostContent：
                @Html.TextAreaFor(m => m.postJson, new { @class = "form-control", @style = "height:100%" })
            </div>
            <div class="panel-body text-center">
                <input class="btn btn-primary" type="submit" style="width:200px" value="POST" />
            </div>

            <div class="panel-body">
                ResponseContent：
                <textarea style="width:100%;height:350px">@Model.responseContent</textarea>
            </div>
            <hr />

        </div>
    }
</div>
<style>
    .title {
        color: blue;
        font-weight: bolder;
    }

    .resCont {
    }
</style>

